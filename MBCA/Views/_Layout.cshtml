@{
    if (Session["logged"]==null)
    {
        Response.Redirect(Url.Action("index", "login"));
    }
}
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Scripts/main")
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("index","home")"><img width="40" height="40" src="~/images/chevron.jpg" style="margin-top: -10px;" /></a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("index","home")">Home</a></li>
                        <li><a href="@Url.Action("index", "report")">Report</a></li>
                        @*<li><a href="@Url.Action("index", "qp")">Test Report</a></li>*@
                        @{
                            if (Session["level"].ToString() == "0")
                            {
                                <li><a href="@Url.Action("index", "config")">Config</a></li>
                            }
                        }
                    </ul>
                    @{
                        if (Session["logged"] != null)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="@Url.Action("out","login")">Logout</a></li>
                            </ul>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <script>
        $(function () {
            function getPage(str) {
                if (str.substr(-1) == '/') {
                    return str.substr(0, str.length - 1);
                }
                return str;
            }

            var url = window.location.pathname;
            var activePage = getPage(url);

            $('.nav li a').each(function () {
                var currentPage = getPage($(this).attr('href'));

                if (activePage == currentPage) {
                    $(this).parent().addClass('active');
                }
            });
        });
    </script>
</body>
</html>