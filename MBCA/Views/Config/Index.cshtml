                            <input type="text" name="tgl" class="form-control" autocomplete="off" placeholder="MM/DD/YYYY" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Vessel</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("vessel", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Currency</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("currency_cat", null, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Cost</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="cost" />
                            <input type="hidden" name="action" />
                            <input type="hidden" name="id" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
