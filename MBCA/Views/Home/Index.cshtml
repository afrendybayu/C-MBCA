@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active"><a href="#dailyPanel" role="tab" data-toggle="tab">Daily Activity</a></li>
            <li role="presentation"><a href="#monthlyPanel" data-toggle="tab" role="tab">Monthly Activity</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dailyPanel">
                <div class="panel-group" id="accordion" role="tablist">
                    <div class="panel" style="border-color: #ccc;">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#inputDaily" style="position:relative; left:99%;">
                                    <i class="glyphicon glyphicon-chevron-down"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="inputDaily" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <form class="form-horizontal" id="dailyForm">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Date</label>
                                            <div class="col-sm-10">
                                                <input type="text" name="daily_date" class="form-control" id="daily_date" autocomplete="off" value="@DateTime.Today.ToString("dd/MM/yyyy")" placeholder="Date" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Vessel</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownList("daily_vessel", null, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-sm-3">Fuel Total</label>
                                            <div class="col-sm-9">
                                                <input type="number" min="0" name="daily_fuel" class="form-control" placeholder="Fuel Total" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Activity</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownList("daily_activity", null, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-sm-2">Unit</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownList("daily_unit", null, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-sm-3">Duration</label>
                                            <div class="col-sm-9">
                                                <input type="text" name="daily_duration" class="form-control" placeholder="Duration" autocomplete="off" />
                                            </div>
                                            <input type="hidden" name="daily_type" value="create" />
                                        </div>
                                        <div class="button-group pull-right" role="group" id="btnSaveGroup">
                                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add</button>
                                            <button type="button" class="btn btn-success" id="btnSaveDataDaily"><i class="glyphicon glyphicon-floppy-disk"></i> Save data today</button>
                                        </div>
                                        <div class="btn-group pull-right" role="group" style="display: none;" id="btnEditGroup">
                                            <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Update</button>
                                            <button type="button" class="btn btn-default" id="btnCancelDaily"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <table id="dailyTable" class="table table-bordered responsive nowrap display" style="width:100%">
                    <thead>
                        <tr>
                            <th>User Unit</th>
                            <th>Activity</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane" id="monthlyPanel">
                <table id="monthlyTable" class="table table-bordered responsive nowrap display" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Vessel Name</th>
                            <th>Activity</th>
                            <th>User Unit</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <footer class="text-right">
            <strong>&copy; @DateTime.Now.Year MBCA - DAUNBIRU</strong>
        </footer>
    </div>
</div>
<style>
    div.floatright {
        float: right;
    }
</style>
@Scripts.Render("~/Script/xdkJKAds")