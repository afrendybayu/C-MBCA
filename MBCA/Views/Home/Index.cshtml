                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="col-md-6">

                                        </div>
                                    </div>
                                    <form class="form-horizontal" id="filterDrill">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label class="control-label col-sm-2">Unit</label>
                                                <div class="col-sm-10">
                                                    @Html.DropDownList("daily_unitid", null, new { @class = "form-control", @id = "cb_unit" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
