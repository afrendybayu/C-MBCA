                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <button type="button" id="drillcari" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                                        </div>
                                    
                                    </form>

                                    <div class="row">
                                    </div>


                                    <div class="table-responsive">
                                        <table id="drillTable" class="table display table-bordered" style="width:100%">
                                            <thead>
                                                <tr>
                                                    @*<th>No</th>*@
                                                    <th>Unit</th>
                                                    <th>Date</th>
                                                    <th>Well</th>
                                                    <th>AFE</th>
                                                    <th>PSC#</th>
                                                    <th>Time From</th>
                                                    <th>Time To</th>
                                                    <th>TimeSpan</th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
