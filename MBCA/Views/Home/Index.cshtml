@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active"><a href="#dailyPanel" role="tab" data-toggle="tab">Daily Activity</a></li>
            <li role="presentation"><a href="#monthlyPanel" data-toggle="tab" role="tab">Monthly Activity</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dailyPanel">
                <table id="dailyTable" class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Vessel Name</th>
                            <th>Activity</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div role="tabpanel" class="tab-pane" id="monthlyPanel">
                <table id="monthlyTable" class="table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Vessel Name</th>
                            <th>Activity</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <footer class="text-right">
            <strong>&copy; @DateTime.Now.Year MBCA - DAUNBIRU</strong>
        </footer>
    </div>
</div>

<div class="modal fade" tabindex="-1" role="dialog" id="dailyInput">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add new Daily Activity</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="dailyForm">
                    <div class="form-group">
                        <label class="control-label col-sm-3">Date</label>
                        <div class="col-sm-9">
                            <input type="text" name="daily_date" class="form-control"  id="dailyDate" autocomplete="off"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Vessel</label>
                        <div class="col-sm-9">
                            <input type="text" name="daily_vessel" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Activity</label>
                        <div class="col-sm-9">
                            <input type="text" name="daily_activity" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3">Duration</label>
                        <div class="col-sm-9">
                            <input type="text" name="daily_duration" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <span class="col-sm-3"></span>
                        <div class="col-sm-9">
                            <input type="submit" value="Add New" class="btn btn-primary right" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>
@Scripts.Render("~/Script/xdkJKAds")