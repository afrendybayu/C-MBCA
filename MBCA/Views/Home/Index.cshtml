@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active"><a href="#dailyPanel" role="tab" data-toggle="tab">Daily Activity</a></li>
            <li role="presentation"><a href="#monthlyPanel" data-toggle="tab" role="tab">Monthly Activity</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dailyPanel">
                <div class="panel-group" id="accordion" role="tablist">
                    <div class="panel" style="border-color: #ccc;">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#inputDaily" style="position:relative; left:99%;">
                                    <i class="glyphicon glyphicon-chevron-down"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="inputDaily" class="panel-collapse " role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                @*<form class="form-horizontal" id="dailyForm">*@
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <form class="form-horizontal" id="activityForm">
                                                <div class="form-group">
                                                    <label class="col-sm-3">Date</label>
                                                    <div class="col-sm-9"><input type="text" name="daily_date" class="form-control" id="daily_tgl" autocomplete="off" value="@DateTime.Today.AddDays(-1).ToString("MM/dd/yyyy")" placeholder="Date" /></div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Vessel</label>
                                                    <div class="col-sm-9">@Html.DropDownList("daily_vessel", null, new { @class = "form-control" })</div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Fuel Total</label>
                                                    <div class="col-sm-9"><input type="number" min="0" name="daily_fuel" class="form-control" placeholder="Fuel Total" required /></div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Standby</label>
                                                    <div class="col-sm-9"><input type="number" min="0" max="24" name="standby" class="form-control" placeholder="Duration" /></div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Load/Disch</label>
                                                    <div class="col-sm-9"><input type="number" min="0" max="24" name="load" class="form-control" placeholder="Duration" /></div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Steaming</label>
                                                    <div class="col-sm-9"><input type="number" min="0" max="24" name="steaming" class="form-control" placeholder="Duration" /></div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="col-sm-3">Downtime</label>
                                                    <div class="col-sm-9"><input type="number" min="0" max="24" name="downtime" class="form-control" placeholder="Duration" /></div>
                                                </div>
                                                @*<div class="dailyButton">
                                                    <div class="floatright">
                                                        <button type="button" class="btn btn-success" id="btnSaveDailyAct"><i class="glyphicon glyphicon-floppy-disk"></i> Save data today</button>
                                                    </div>
                                                </div>*@
                                            </form>
                                        </div>
                                        <div class="col-md-6">
                                            <form class="form-horizontal" id="timeatForm">
                                                <div class="form-group">
                                                    <input type="hidden" name="action" value="create" />
                                                    <input type="hidden" name="id" />
                                                    <label class="col-sm-2">Time At</label>
                                                    <div class="col-sm-4">@Html.DropDownList("daily_unit", null, new { @class = "form-control" })</div>
                                                    <div class="col-sm-4"><input type="text" name="time_at_dur" class="form-control" placeholder="Duration" autocomplete="off" required /></div>
                                                    <div class="col-sm-1"></div>
                                                    <div class="col-sm-1">
                                                        <div class="button-group pull-right" role="group" id="btnSaveGroup">
                                                            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                            
                                            <table id="dailyTable" class="table table-bordered responsive nowrap display" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th>User Unit</th>
                                                        <th>Duration</th>
                                                    </tr>
                                                </thead>
                                            </table>
                                            <div class="btn-group pull-right" role="group" style="display: none;" id="btnEditGroup">
                                                <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Update</button>
                                                <button type="button" class="btn btn-default" id="btnCancelDaily"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                                            </div>
                                            <div class="dailyButton">
                                                <div class="floatright">
                                                    <button type="button" class="btn btn-success" id="btnSaveDailyAct"><i class="glyphicon glyphicon-floppy-disk"></i> Save data today</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div> 
                                
                                        
                                @*</form>*@
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="dailyButton">
                    <div class="floatright">
                        <button type="submit" class="btn btn-success" id="btnSaveDataDaily"><i class="glyphicon glyphicon-floppy-disk"></i> Save data today</button>
                    </div>
                </div>*@
            </div>
            <div role="tabpanel" class="tab-pane" id="monthlyPanel">
                <div class="panel-group" id="accordion1" role="tablist">
                    <div class="floatright col-md-6" style="left:8.5%;">
                        <form class="form-inline">
                            <div class="form-group">
                                <label class="control-label">Filter :</label>
                                <input type="text" name="tgl_e" class="form-control" placeholder="FROM : MM/DD/YYYY" />
                            </div>
                            <div class="form-group">
                                <div class="input-group">
                                    <input type="text" name="tgl_eop" class="form-control" placeholder="TO : MM/DD/YYYY" />
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default">Filter</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div id="monthlyView">
                        <table id="monthlyTable" class="table table-bordered table-hover responsive nowrap display" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Vessel Name</th>
                                    <th>Activity</th>
                                    <th>Barge Unit</th>
                                    <th>Duration</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer">
        <footer class="text-right">
            <strong>&copy; @DateTime.Now.Year MBCA - DAUNBIRU</strong>
        </footer>
    </div>
</div>
@Scripts.Render("~/Script/xdkJKAds")
