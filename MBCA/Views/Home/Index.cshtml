@{
    ViewBag.Title = "Home";
    Layout = "~/Views/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <ul class="nav nav-pills" role="tablist">
            <li role="presentation" class="active"><a href="#dailyPanel" role="tab" data-toggle="tab">Daily Activity</a></li>
            <li role="presentation"><a href="#dc" data-toggle="tab" role="tab">Drill & Completion</a></li>
            <li role="presentation"><a href="#dailyLogPanel" data-toggle="tab" role="tab">Log Daily Activity</a></li>
        </ul>
    </div>
    <div class="panel-body">
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="dailyPanel">
                <div class="panel-group" id="accordion" role="tablist">
                    <div class="panel" style="border-color: #ccc;">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a role="button" data-toggle="collapse" data-parent="#accordion" href="#inputDaily" style="position:relative; left:99%;">
                                    <i class="glyphicon glyphicon-chevron-down"></i>
                                </a>
                            </h4>
                        </div>
                        <div id="inputDaily" class="panel-collapse " role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <form class="form-horizontal" id="activityForm">
                                            <div class="form-group">
                                                <label class="col-sm-3">Date</label>
                                                <div class="col-sm-9"><input type="text" name="daily_date" class="form-control" id="daily_tgl" autocomplete="off" value="@DateTime.Today.AddDays(-1).ToString("MM/dd/yyyy")" placeholder="Date" /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Vessel</label>
                                                <div class="col-sm-9">@Html.DropDownList("daily_vesselid", null, new { @class = "form-control" })</div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Fuel Total</label>
                                                <div class="col-sm-9"><input type="number" min="0" name="daily_fuel" class="form-control" placeholder="Fuel Total" required /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Standby</label>
                                                <div class="col-sm-9"><input type="number" min="0" max="24" name="standby" class="form-control" placeholder="Duration" /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Load/Disch</label>
                                                <div class="col-sm-9"><input type="number" min="0" max="24" name="load" class="form-control" placeholder="Duration" /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Steaming</label>
                                                <div class="col-sm-9"><input type="number" min="0" max="24" name="steaming" class="form-control" placeholder="Duration" /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Downtime</label>
                                                <div class="col-sm-9"><input type="number" min="0" max="24" name="downtime" class="form-control" placeholder="Duration" /></div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-sm-3">Mob/Demob</label>
                                                <div class="col-sm-4"><input type="checkbox" name="mob" value="1"> Hitung<br></div>
                                            </div>
                                            @*<input type="hidden" name="action" value="create" />*@
                                            <input type="hidden" name="id" />
                                        </form>
                                    </div>
                                    <div class="col-md-6">
                                        <form class="form-horizontal" id="timeatForm">
                                            <div class="form-group">
                                                <input type="hidden" name="action" value="create" />
                                                <input type="hidden" name="id" />
                                                <input type="hidden" name="date_timeat" />

                                                <label class="col-sm-2">Time At</label>
                                                <div class="col-sm-4">@Html.DropDownList("daily_unitid", null, new { @class = "form-control", @id="unitid" })</div>
                                                <div class="col-sm-4"><input type="number" min="0" max="24" name="time_at_dur" class="form-control" placeholder="Duration"  required /></div>
                                                <div class="col-sm-1"></div>
                                                <div class="col-sm-1">
                                                    <div class="button-group pull-right" role="group" >
                                                        <button type="submit" class="btn btn-primary" id="btnSaveGroup">@*<i class="glyphicon glyphicon-plus"></i>*@ Add</button>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                        </form>
                                            
                                        <table id="dailyTable" class="table table-bordered responsive nowrap display" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th>User Unit</th>
                                                    <th>Duration</th>
                                                </tr>
                                            </thead>
                                        </table>
                                        @*<div class="btn-group pull-right" role="group" style="display: none;" id="btnEditGroup">
                                            <button type="submit" class="btn btn-warning"><i class="glyphicon glyphicon-edit"></i> Update</button>
                                            <button type="button" class="btn btn-default" id="btnCancelDaily"><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                                        </div>*@
                                        <div class="dailyButton">
                                            <div class="floatright">
                                                <button type="button" class="btn btn-default" id="btnCancelDaily" ><i class="glyphicon glyphicon-remove"></i> Cancel</button>
                                                <button type="button" class="btn btn-success" id="btnUpdateDailyAct"><i class="glyphicon glyphicon-floppy-disk"></i> Update data</button>
                                                <button type="button" class="btn btn-success" id="btnSaveDailyAct"><i class="glyphicon glyphicon-floppy-disk"></i> Save data today</button>
                                            </div>
                                        </div>
                                    </div>
                                </div> 
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="row">
                                <form class="form-horizontal" id="filterDailyLog">
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-sm-2">Unit</label>
                                            <div class="col-sm-10">
                                                @Html.DropDownList("daily_vesselid", null, new { @class = "form-control", @id = "cb_unit" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-sm-2">Periode</label>
                                            <div class="col-sm-5">
                                                <input type="text" placeholder="Date From" class="form-control" name="f_daily_from" />
                                            </div>
                                            <div class="col-sm-5">
                                                <input type="text" placeholder="Date To" class="form-control" name="f_daily_to" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <button type="button" id="drillcari" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </form>
                            </div>
                            <div class="table-responsive">
                                <table id="DailyLogTable" class="table display table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            @*<th>Unit</th>*@
                                            <th>Date</th>
                                            <th>Vessel</th>
                                            <th>Standby</th>
                                            <th>Load</th>
                                            <th>Steam</th>
                                            <th>DownTime</th>
                                            <th>Fuel tot</th>
                                            @*<th>Unit</th>
                                            <th>Duration</th>*@

                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
